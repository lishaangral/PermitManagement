@model ConfirmModalViewModel

<div class="modal fade" id="@Model.ModalId" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">@Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                @Html.Raw(Model.BodyHtml)
            </div>

            <div class="modal-footer">
                <form asp-action="@Model.ConfirmAction"
                      asp-controller="@Model.Controller"
                      method="post">
                    <input type="hidden" name="id" value="@Model.EntityId" />
                    <button type="submit" class="btn @Model.ConfirmButtonClass">
                        Confirm
                    </button>
                </form>

                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Cancel
                </button>
            </div>

        </div>
    </div>
</div>