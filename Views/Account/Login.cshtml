@model PemitManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Employee Login";
}

<div class="page-center row justify-content-center">
    <div class="col-md-4">
        <div class="login-card shadow">
            <div class="login-card-header text-center">
                <h4>Employee Login</h4>
            </div>
            <div class="login-card-body">
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="EmpNo" class="form-label"></label>
                        <input asp-for="EmpNo" class="form-control" />
                        <span asp-validation-for="EmpNo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-orange w-100">
                        Login
                    </button>

                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="text-danger mt-2">@error.ErrorMessage</div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
