@model List<PemitManagement.ViewModels.ReportAnalysis.EmployeeReportSummaryVM>

<div class="card mt-3 h-100">
    <div class="card-header">Permits by Employee</div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Total Permits</th>
                    <th>Permits with Violations</th>
                    <th>Total Violations</th>
                    <th>Action Taken</th>
                    <th>First Permit</th>
                    <th>Last Permit</th>
                    <th>Entry Days</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.EmployeeName</td>
                        <td><span class="badge bg-primary">@e.TotalPermits</span></td>
                        <td><span class="badge bg-warning">@e.PermitsWithViolations</span></td>
                        <td><span class="badge bg-danger">@e.TotalViolations</span></td>
                        <td><span class="badge bg-info">@e.ActionTaken</span></td>
                        <td>@e.FirstPermit.ToString("dd MMM yyyy")</td>
                        <td>@e.LastPermit.ToString("dd MMM yyyy")</td>
                        <td><span class="badge bg-secondary">@e.EntryDays</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
