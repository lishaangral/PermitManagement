@model List<PemitManagement.ViewModels.ReportAnalysis.TimeReportSummaryVM>

<div class="card mt-3 h-100">
    <div class="card-header">Time-based Summary</div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Period</th>
                    <th>Total Permits</th>
                    <th>Permits with Violations</th>
                    <th>Total Violations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.PeriodLabel</td>
                        <td><span class="badge bg-primary">@t.TotalPermits</span></td>
                        <td><span class="badge bg-warning">@t.PermitsWithViolations</span></td>
                        <td><span class="badge bg-danger">@t.TotalViolations</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
