<!-- DETAILED LIST -->
<div class="card mt-4">
    <div class="card-header d-flex justify-content-between">
        <span>Detailed Observations</span>
        <span class="badge bg-secondary">@Model.TotalRecords Records</span>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Permit #</th>
                    <th>Employee</th>
                    <th>Agency</th>
                    <th>Work Order</th>
                    <th>Violation</th>
                    <th>Severity</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th class="action">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Rows)
                {
                    <tr>
                        <td>@r.PermitNumber</td>
                        <td>@r.Employee</td>
                        <td>@r.Agency</td>
                        <td>@r.WorkOrder</td>
                        <td>@r.Violation</td>
                        <td>
                            <span class="badge severity-@r.Severity">
                                @r.Severity.ToUpper()
                            </span>
                        </td>
                        <td class="text-center">
                            <span class="status-badge @(r.ObservationStatus == ObservationStatus.Open ? "status-open" : "status-closed")">
                                @r.ObservationStatus
                            </span>
                        </td>
                        <td>@r.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
                        <td class="actions-cell">
                            <a asp-controller="Permits"
                               asp-action="Permit"
                               asp-route-id="@r.PermitId"
                               class="btn btn-sm btn-view">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    @{
        int current = Model.Page;
        int total = Model.TotalPages;
        int start = Math.Max(1, current - 2);
        int end = Math.Min(total, current + 2);
    }

    <nav>
        <ul class="pagination justify-content-center mt-2 mb-2">
            <li class="page-item @(current == 1 ? "disabled" : "")">
                <a class="page-link" 
                   asp-action="Index"
                   asp-route-PermitNumber="@Model.Filters.PermitNumber"
                   asp-route-WorkOrderNumber="@Model.Filters.WorkOrderNumber"
                   asp-route-PermitTypeId="@Model.Filters.PermitTypeId"
                   asp-route-LocationId="@Model.Filters.LocationId"
                   asp-route-RefineryType="@Model.Filters.RefineryType"
                   asp-route-ViolationId="@Model.Filters.ViolationId"
                   asp-route-ReportType="@Model.Filters.ReportType"
                   asp-route-FromDate="@Model.Filters.FromDate"
                   asp-route-ToDate="@Model.Filters.ToDate"
                   asp-route-Page="@(current - 1)">
                       Previous
                </a>
            </li>

            @for (int i = start; i <= end; i++)
            {
                <li class="page-item @(i == current ? "active" : "")">
                    <a class="page-link" 
                       asp-action="Index"
                       asp-route-PermitNumber="@Model.Filters.PermitNumber"
                       asp-route-WorkOrderNumber="@Model.Filters.WorkOrderNumber"
                       asp-route-PermitTypeId="@Model.Filters.PermitTypeId"
                       asp-route-LocationId="@Model.Filters.LocationId"
                       asp-route-RefineryType="@Model.Filters.RefineryType"
                       asp-route-ViolationId="@Model.Filters.ViolationId"
                       asp-route-ReportType="@Model.Filters.ReportType"
                       asp-route-FromDate="@Model.Filters.FromDate"
                       asp-route-ToDate="@Model.Filters.ToDate"
                       asp-route-Page="@i">
                            @i
                    </a>
                </li>
            }

            <li class="page-item @(current >= total ? "disabled" : "")">
                <a class="page-link" 
                   asp-action="Index"
                   asp-route-PermitNumber="@Model.Filters.PermitNumber"
                   asp-route-WorkOrderNumber="@Model.Filters.WorkOrderNumber"
                   asp-route-PermitTypeId="@Model.Filters.PermitTypeId"
                   asp-route-LocationId="@Model.Filters.LocationId"
                   asp-route-RefineryType="@Model.Filters.RefineryType"
                   asp-route-ViolationId="@Model.Filters.ViolationId"
                   asp-route-ReportType="@Model.Filters.ReportType"
                   asp-route-FromDate="@Model.Filters.FromDate"
                   asp-route-ToDate="@Model.Filters.ToDate" 
                   asp-route-Page="@(current + 1)">
                    Next
                </a>
            </li>
        </ul>
    </nav>
</div>

@section Scripts {
    <script src="~/js/permit-index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/report-analysis.js"></script>
}