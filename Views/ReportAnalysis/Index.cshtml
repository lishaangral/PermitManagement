@model PemitManagement.ViewModels.ReportAnalysis.ReportAnalysisViewModel
@using PemitManagement.Data.Enums

@{
    ViewData["Title"] = "Report Analysis";
}

<link rel="stylesheet" href="~/css/permits.css" />
<link rel="stylesheet" href="~/css/report.css" />

<!-- HEADER -->
<div class="page-header text-center mb-3">
    <h2>Report Analysis</h2>
    <p class="text-muted">
        Analyze permits and observations based on time, employees, agencies, refinery type and violations.
    </p>
</div>

<!-- FILTER CARD -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between">
        <span>Filters</span>
        <button class="btn btn-sm btn-outline-secondary" type="button" id="toggleFilters">
            Collapse
        </button>
    </div>

    <div class="card-body" id="filterPanel">
        <form method="get">
            <div class="row g-3">

                <div class="col-md-3">
                    <label>Report Type</label>
                    <select class="form-select" asp-for="Filters.ReportType">
                        @foreach (var rt in Enum.GetValues(typeof(ReportType)))
                        {
                            <option value="@rt">@rt</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label>Permit Number</label>
                    <input class="form-control" asp-for="Filters.PermitNumber" />
                </div>

                <div class="col-md-3">
                    <label>Work Order Number</label>
                    <input class="form-control" asp-for="Filters.WorkOrderNumber" />
                </div>

                <div class="col-md-3">
                    <label>Violation</label>
                    <input class="form-control" asp-for="Filters.ViolationId" placeholder="Violation ID" />
                </div>

                <div class="col-md-3">
                    <label>From Date</label>
                    <input type="date" class="form-control" asp-for="Filters.FromDate" />
                </div>

                <div class="col-md-3">
                    <label>To Date</label>
                    <input type="date" class="form-control" asp-for="Filters.ToDate" />
                </div>

            </div>

            <div class="mt-3 d-flex gap-2 align-items-center">
                <!-- Generate -->
                <button type="submit" class="btn btn-orange">
                    Generate Report
                </button>

                <!-- Clear -->
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Clear
                </a>

                <!-- RIGHT SIDE ACTIONS -->
                <div class="ms-auto d-flex gap-2">
                    <a asp-action="ExportCsv"
                       asp-route-PermitNumber="@Model.Filters.PermitNumber"
                       asp-route-WorkOrderNumber="@Model.Filters.WorkOrderNumber"
                       asp-route-PermitTypeId="@Model.Filters.PermitTypeId"
                       asp-route-LocationId="@Model.Filters.LocationId"
                       asp-route-RefineryType="@Model.Filters.RefineryType"
                       asp-route-ViolationId="@Model.Filters.ViolationId"
                       asp-route-ReportType="@Model.Filters.ReportType"
                       asp-route-FromDate="@Model.Filters.FromDate"
                       asp-route-ToDate="@Model.Filters.ToDate"
                       class="btn btn-success">
                        Export CSV
                    </a>

                    <a asp-action="ExportExcel"
                       asp-route-PermitNumber="@Model.Filters.PermitNumber"
                       asp-route-WorkOrderNumber="@Model.Filters.WorkOrderNumber"
                       asp-route-PermitTypeId="@Model.Filters.PermitTypeId"
                       asp-route-LocationId="@Model.Filters.LocationId"
                       asp-route-RefineryType="@Model.Filters.RefineryType"
                       asp-route-ViolationId="@Model.Filters.ViolationId"
                       asp-route-ReportType="@Model.Filters.ReportType"
                       asp-route-FromDate="@Model.Filters.FromDate"
                       asp-route-ToDate="@Model.Filters.ToDate"
                       class="btn btn-primary">
                        Export Excel
                    </a>

                    <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                        Print
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- REPORT SUMMARY -->
<div class="card mb-4">
    <div class="card-header">Report Summary</div>

    <div class="card-body">
        <div class="row g-3">

            <!-- SUMMARY STATS -->
            <div class="col-md-5">
                <div class="info-card h-100">
                    <div class="info-card-title">Summary Statistics</div>

                    <div class="info-row">
                        <span>Total Permits</span>
                        <strong>@Model.TotalPermits</strong>
                    </div>

                    <div class="info-row">
                        <span>Total Violations</span>
                        <strong>@Model.TotalViolations</strong>
                    </div>

                    <div class="info-row">
                        <span>Permits With Violations</span>
                        <strong>@Model.PermitsWithViolations</strong>
                    </div>

                    <div class="info-row">
                        <span>Date Range</span>
                        <strong>
                            @Model.Filters.FromDate?.ToString("dd MMM yyyy")
                            -
                            @Model.Filters.ToDate?.ToString("dd MMM yyyy")
                        </strong>
                    </div>
                </div>
            </div>

            <!-- VISUALIZATION -->
            <div class="col-md-7">
                <div class="info-card h-100">
                    <div class="info-card-title">Report Visualization</div>
                    <div class="chart-container">
                        <canvas id="reportChart"
                                data-labels='@Json.Serialize(Model.ChartLabels)'
                                data-permits='@Json.Serialize(Model.ChartPermits)'
                                data-violations='@Json.Serialize(Model.ChartViolations)'>
                        </canvas>
                    </div>

                </div>
            </div>

        </div>

        <!-- REPORT TYPE SPECIFIC SUMMARY -->
        <div class="h-100">
            @if (Model.Filters.ReportType == ReportType.ByEmployee)
            {
                <partial name="_EmployeeSummary" model="Model.EmployeeSummary" />
            }
            else if (Model.Filters.ReportType == ReportType.ByAgency)
            {
                <partial name="_AgencySummary" model="Model.AgencySummary" />
            }
            else if (Model.Filters.ReportType == ReportType.ByRefineryType)
            {
                <partial name="_RefinerySummary" model="Model.RefinerySummary" />
            }
            else if (Model.Filters.ReportType == ReportType.ByViolation)
            {
                <partial name="_ViolationSummary" model="Model.ViolationSummary" />
            }
            else
            {
                <partial name="_TimeSummary" model="Model.TimeSummary" />
            }
        </div>
    </div>
</div>

